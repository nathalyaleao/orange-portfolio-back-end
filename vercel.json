{    
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ], 
    "routes": [
        {
          "src": "/((?!.*\\.\\w+$).*)",
          "dest": "/index.js"
        },
        {
          "src": "/(.+\\.[a-z]+)$",
          "dest": "/public/$1"
        }
      ]
}

